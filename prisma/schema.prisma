model Family {
  id               Int    @id @default(autoincrement()) // ID internal
  urlId            String @unique @default(cuid()) // ID untuk URL
  familyCardNumber String @unique @db.VarChar(20)
  address          String
  dusun            String @db.VarChar(100)
  rw               String @db.VarChar(10)
  rt               String @db.VarChar(10)

  // Kepala keluarga (satu keluarga hanya punya satu kepala)
  headOfFamilyId Int?      @unique
  headOfFamily   Resident? @relation("HeadOfFamily", fields: [headOfFamilyId], references: [id])

  // Anggota keluarga
  members Resident[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([dusun, rw, rt])
}

model Resident {
  id               Int              @id @default(autoincrement()) // ID internal
  urlId            String           @unique @default(cuid()) // ID untuk URL
  nik              String           @unique @db.VarChar(16)
  fullName         String           @db.VarChar(100)
  gender           Gender
  birthPlace       String?
  birthDate        DateTime?
  religion         Religion?
  education        Education?
  occupation       Occupation?
  maritalStatus    MaritalStatus?
  bloodType        BloodType?       @default(UNKNOWN)
  disabilityType   DisabilityType?  @default(NONE)
  citizenship      Citizenship?     @default(WNI)
  passportNumber   String?          @db.VarChar(50)
  ethnicity        String?          @db.VarChar(100)
  nationality      String?          @db.VarChar(100) // country name for WNA
  address          String?          @db.Text
  dusun            String?
  rw               String?
  rt               String?
  phone            String?
  email            String?
  populationStatus PopulationStatus @default(PERMANENT)

  familyRelationship FamilyRelationship? // <--- TAMBAHKAN INI

  // Relasi keluarga
  familyId Int?
  family   Family? @relation(fields: [familyId], references: [id])

  // Relasi balik untuk kepala keluarga
  headOfFamilyFor Family? @relation("HeadOfFamily")

  // Relasi visitor (pendatang)
  visitor        Visitor?
  staffPositions Staff[]

  isActive  Boolean   @default(true)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([familyId])
  @@index([dusun, rw, rt])
  @@index([populationStatus])
  @@index([isActive])
}

model Visitor {
  id         Int      @id @default(autoincrement()) // ID internal
  urlId      String   @unique @default(cuid()) // ID untuk URL
  residentId Int      @unique
  resident   Resident @relation(fields: [residentId], references: [id])

  originAddress  String? // alamat asal
  originVillage  String? // desa asal
  originDistrict String?
  originRegency  String?
  originProvince String?
  arrivalDate    DateTime? // tanggal datang
  purpose        String? // tujuan datang (kerja, sekolah, dll)
  stayType       String? // kontrak, kos, keluarga, dll
  isStillStaying Boolean   @default(true)
  departureDate  DateTime? // tanggal keluar
  notes          String? // keterangan tambahan

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([arrivalDate])
  @@index([departureDate])
}

// GOVERMENT SCHEMA

model StaffPosition {
  id                Int                @id @default(autoincrement())
  name              String             @db.VarChar(100)
  slug              String             @unique
  isUnique          Boolean            @default(false)
  description       String?            @db.Text
  staffAssignments  Staff[]
  organizationUnits OrganizationUnit[]
  staffHistories    StaffHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Staff {
  id               Int               @id @default(autoincrement())
  resident         Resident          @relation(fields: [residentId], references: [id])
  residentId       Int
  positionType     StaffPosition     @relation(fields: [positionTypeId], references: [id])
  positionTypeId   Int
  isActive         Boolean           @default(true)
  startDate        DateTime
  endDate          DateTime?
  staffHistories   StaffHistory[]
  organizationUnit OrganizationUnit?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StaffHistory {
  id             Int           @id @default(autoincrement())
  staffMember    Staff         @relation(fields: [staffId], references: [id])
  staffId        Int
  positionType   StaffPosition @relation(fields: [positionTypeId], references: [id])
  positionTypeId Int
  startDate      DateTime
  endDate        DateTime?
  note           String?       @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrganizationUnit {
  id             Int                @id @default(autoincrement())
  positionType   StaffPosition      @relation(fields: [positionTypeId], references: [id])
  positionTypeId Int
  parent         OrganizationUnit?  @relation("UnitHierarchy", fields: [parentId], references: [id])
  parentId       Int?
  children       OrganizationUnit[] @relation("UnitHierarchy")
  staffMember    Staff?             @relation(fields: [staffId], references: [id])
  staffId        Int?               @unique // <<< tambahkan @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// SCHEMA KEUANGAN 

/// --------------------------------------------------
/// ENUMS
/// --------------------------------------------------
enum TransactionType {
  DEBIT
  CREDIT
}

/// --------------------------------------------------
/// APBDes STRUCTURE (Year ‚Üí Category ‚Üí Activity ‚Üí Allocation ‚Üí Realization)
/// --------------------------------------------------

model BudgetYear {
  id          Int     @id @default(autoincrement())
  year        Int     @unique
  title       String?
  isLocked    Boolean @default(false)
  isFinalized Boolean @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // audit
  createdById Int?
  updatedById Int?

  categories BudgetCategory[]
}

model BudgetCategory {
  id   Int    @id @default(autoincrement())
  name String

  year   BudgetYear @relation(fields: [yearId], references: [id])
  yearId Int

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  createdById Int?
  updatedById Int?

  activities BudgetActivity[]

  @@index([yearId])
}

model BudgetActivity {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  isLocked    Boolean @default(false)

  category   BudgetCategory @relation(fields: [categoryId], references: [id])
  categoryId Int

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  createdById Int?
  updatedById Int?

  allocations BudgetAllocation[]

  @@index([categoryId])
}

model BudgetAllocation {
  id       Int     @id @default(autoincrement())
  amount   Decimal @default(0) @db.Decimal(20, 2)
  notes    String?
  isLocked Boolean @default(false)

  activity   BudgetActivity @relation(fields: [activityId], references: [id])
  activityId Int

  fundingSource   FundingSource? @relation(fields: [fundingSourceId], references: [id])
  fundingSourceId Int?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  createdById Int?
  updatedById Int?

  realizations BudgetRealization[]

  @@index([activityId])
  @@index([fundingSourceId])
}

model BudgetRealization {
  id     Int       @id @default(autoincrement())
  amount Decimal   @default(0) @db.Decimal(20, 2)
  date   DateTime?
  notes  String?

  allocation   BudgetAllocation @relation(fields: [allocationId], references: [id])
  allocationId Int

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  createdById Int?
  updatedById Int?

  transactions FinancialTransaction[]

  @@index([allocationId])
  @@index([date])
}

/// --------------------------------------------------
/// FUNDING SOURCES
/// --------------------------------------------------

model FundingSource {
  id          Int     @id @default(autoincrement())
  name        String
  code        String? @unique
  description String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  createdById Int?
  updatedById Int?

  allocations BudgetAllocation[]
}

/// --------------------------------------------------
/// BANK ACCOUNTS & TRANSACTIONS
/// --------------------------------------------------

model VillageBankAccount {
  id             Int     @id @default(autoincrement())
  bankName       String
  accountNumber  String  @unique
  ownerName      String
  openingBalance Decimal @default(0) @db.Decimal(20, 2)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  createdById Int?
  updatedById Int?

  transactions FinancialTransaction[]

  @@index([accountNumber])
}

model FinancialTransaction {
  id                Int             @id @default(autoincrement())
  transactionNumber String          @unique
  date              DateTime
  amount            Decimal         @db.Decimal(20, 2)
  type              TransactionType
  notes             String?
  balanceAfter      Decimal?        @db.Decimal(20, 2) // saldo setelah transaksi

  realization   BudgetRealization @relation(fields: [realizationId], references: [id])
  realizationId Int

  account   VillageBankAccount? @relation(fields: [accountId], references: [id])
  accountId Int?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  createdById Int?
  updatedById Int?

  attachments TransactionAttachment[]

  @@index([date])
  @@index([realizationId])
  @@index([accountId])
}

model TransactionAttachment {
  id            Int                  @id @default(autoincrement())
  transaction   FinancialTransaction @relation(fields: [transactionId], references: [id])
  transactionId Int

  path         String
  filename     String
  contentType  String?
  size         Int?
  uploadedAt   DateTime @default(now())
  uploadedById Int?

  @@index([transactionId])
}

/// --------------------------------------------------
/// AUDIT LOG (OPTIONAL BUT HIGHLY RECOMMENDED)
/// --------------------------------------------------

model AuditLog {
  id          Int      @id @default(autoincrement())
  actorId     Int?
  action      String
  targetTable String?
  targetId    Int?
  payload     Json?
  createdAt   DateTime @default(now())

  @@index([actorId])
  @@index([targetTable, targetId])
}
