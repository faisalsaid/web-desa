}

enum FamilyRelationship {
  HEAD // kepala keluarga
  SPOUSE // istri/suami
  CHILD // anak
  PARENT // orang tua
  SIBLING // saudara
  OTHER // lainnya
}

model Family {
  id               Int    @id @default(autoincrement()) // ID internal
  urlId            String @unique @default(cuid()) // ID untuk URL
  familyCardNumber String @unique @db.VarChar(20)
  address          String
  dusun            String @db.VarChar(100)
  rw               String @db.VarChar(10)
  rt               String @db.VarChar(10)

  // Kepala keluarga (satu keluarga hanya punya satu kepala)
  headOfFamilyId Int?      @unique
  headOfFamily   Resident? @relation("HeadOfFamily", fields: [headOfFamilyId], references: [id])

  // Anggota keluarga
  members Resident[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([dusun, rw, rt])
}

model Resident {
  id               Int              @id @default(autoincrement()) // ID internal
  urlId            String           @unique @default(cuid()) // ID untuk URL
  nik              String           @unique @db.VarChar(16)
  fullName         String           @db.VarChar(100)
  gender           Gender
  birthPlace       String?
  birthDate        DateTime?
  religion         Religion?
  education        Education?
  occupation       Occupation?
  maritalStatus    MaritalStatus?
  bloodType        BloodType?       @default(UNKNOWN)
  disabilityType   DisabilityType?  @default(NONE)
  citizenship      Citizenship?     @default(WNI)
  passportNumber   String?          @db.VarChar(50)
  ethnicity        String?          @db.VarChar(100)
  nationality      String?          @db.VarChar(100) // country name for WNA
  address          String?          @db.Text
  dusun            String?
  rw               String?
  rt               String?
  phone            String?
  email            String?
  populationStatus PopulationStatus @default(PERMANENT)

  familyRelationship FamilyRelationship? // <--- TAMBAHKAN INI

  // Relasi keluarga
  familyId Int?
  family   Family? @relation(fields: [familyId], references: [id])

  // Relasi balik untuk kepala keluarga
  headOfFamilyFor Family? @relation("HeadOfFamily")

  // Relasi visitor (pendatang)
  visitor        Visitor?
  staffPositions Staff[]

  isActive  Boolean   @default(true)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([familyId])
  @@index([dusun, rw, rt])
  @@index([populationStatus])
  @@index([isActive])
}

model Visitor {
  id         Int      @id @default(autoincrement()) // ID internal
  urlId      String   @unique @default(cuid()) // ID untuk URL
  residentId Int      @unique
  resident   Resident @relation(fields: [residentId], references: [id])

  originAddress  String? // alamat asal
  originVillage  String? // desa asal
  originDistrict String?
  originRegency  String?
  originProvince String?
  arrivalDate    DateTime? // tanggal datang
  purpose        String? // tujuan datang (kerja, sekolah, dll)
  stayType       String? // kontrak, kos, keluarga, dll
  isStillStaying Boolean   @default(true)
  departureDate  DateTime? // tanggal keluar
  notes          String? // keterangan tambahan

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([arrivalDate])
  @@index([departureDate])
}

// GOVERMENT SCHEMA

enum StaffPositionType {
  TOP // Kepala Desa
  MIDDLEUP // Sekretaris Desa
  MIDDLE // Kaur / Kasi
  LOWER // Kadus / pengawas
  STAFF // Staf pelaksana
  OTHER
}

model StaffPosition {
  id                Int                @id @default(autoincrement())
  name              String             @db.VarChar(100)
  slug              String             @unique
  isUnique          Boolean            @default(false)
  description       String?            @db.Text
  staffAssignments  Staff[]
  organizationUnits OrganizationUnit[]
  staffHistories    StaffHistory[]
  positionType      StaffPositionType  @default(OTHER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Staff {
  id               Int               @id @default(autoincrement())
  urlId            String            @unique @default(cuid()) // ID untuk URL
  name             String            @db.VarChar(100)
  imageUrl         String?           @db.VarChar(255)
  positionType     StaffPosition     @relation(fields: [positionTypeId], references: [id])
  residentId       Int?
  resident         Resident?          @relation(fields: [residentId], references: [id])
  positionTypeId   Int
  isActive         Boolean           @default(true)
  startDate        DateTime
  endDate          DateTime?
  staffHistories   StaffHistory[]
  organizationUnit OrganizationUnit?
  parentStaffId    Int?
  parentStaff      Staff?            @relation("StaffHierarchy", fields: [parentStaffId], references: [id])
  subordinates     Staff[]           @relation("StaffHierarchy")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StaffHistory {
  id             Int           @id @default(autoincrement())
  staffMember    Staff         @relation(fields: [staffId], references: [id])
  staffId        Int
  positionType   StaffPosition @relation(fields: [positionTypeId], references: [id])
  positionTypeId Int
  startDate      DateTime
  endDate        DateTime?
  note           String?       @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrganizationUnit {
  id             Int                @id @default(autoincrement())
  positionType   StaffPosition      @relation(fields: [positionTypeId], references: [id])
  positionTypeId Int
  parent         OrganizationUnit?  @relation("UnitHierarchy", fields: [parentId], references: [id])
  parentId       Int?
  children       OrganizationUnit[] @relation("UnitHierarchy")
  staffMember    Staff?             @relation(fields: [staffId], references: [id])
  staffId        Int?               @unique // <<< tambahkan @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// APBDES ===============================================================================

model BudgetYear {
  id          Int       @id @default(autoincrement())
  year        Int       @unique
  isActive    Boolean   @default(false)
  isLocked    Boolean   @default(false) // lock year when finalized
  isFinalized Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  revenues  Revenue[]
  expenses  Expense[]
  financing Financing[]
}

model Revenue {
  id          Int             @id @default(autoincrement())
  urlId       String          @unique @default(cuid()) // ID untuk URL
  yearId      Int
  category    RevenueCategory
  description String
  budget      Decimal
  realized    Decimal
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  deletedAt   DateTime?

  year BudgetYear @relation(fields: [yearId], references: [id])
}

enum RevenueCategory {
  OWN_SOURCE // PAD
  TRANSFER // TRANSFER
  OTHER // LAIN_LAIN
}

model Expense {
  id          Int           @id @default(autoincrement())
  urlId       String        @unique @default(cuid()) // ID untuk URL
  yearId      Int
  sector      ExpenseSector
  description String
  budget      Decimal
  realized    Decimal
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deletedAt   DateTime?

  year BudgetYear @relation(fields: [yearId], references: [id])
}

enum ExpenseSector {
  GOVERNMENT_ADMIN // PEMERINTAHAN
  DEVELOPMENT // PEMBANGUNAN
  COMMUNITY_GUIDANCE // PEMBINAAN
  EMPOWERMENT // PEMBERDAYAAN
  EMERGENCY // BENCANA_MENDESAK
}

model Financing {
  id          Int           @id @default(autoincrement())
  urlId       String        @unique @default(cuid()) // ID untuk URL
  yearId      Int
  type        FinancingType
  description String
  amount      Decimal
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deletedAt   DateTime?

  year BudgetYear @relation(fields: [yearId], references: [id])
}

enum FinancingType {
  RECEIPT // PENERIMAAN
  EXPENDITURE // PENGELUARAN
}

// IMAGE ASSET

model ImageAsset {
  id          String  @id @default(cuid())
  bucketKey   String // lokasi file di Backblaze
  url         String // CDN publik
  filename    String
  mimeType    String
  size        Int
  width       Int?
  height      Int?
  alt         String?
  description String?
  variants    Json? // thumbnail, webp, dll (opsional nanti)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
